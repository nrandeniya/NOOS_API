@page "/products"
@inherits ProductListBase

   

<h3>Products List</h3>

<div class="card-deck">
    @foreach (var product in Products)
    {
        <div class="card m-3" style="min-width: 10rem; max-width:30.5%">
            <img class="card-img-top imageThumbnail" src="@product.PhotoPath" />
            <div class="card-header">
                <h4>@product.ProductName</h4>
                <h5><strong>$@product.Price</strong></h5>

                <div class="card-footer text-center">
                    <!--  <button href="/NOOS "class="btn btn-primary" data-toggle="modal" @onclick="ShowPopup"> NOOS </button> -->
                    <a href="/NOOS" class="btn btn-primary"> NOOS </a>
                    <a href="/" class="btn btn-success"> ADD TO CART </a>


                </div>

            </div>
        </div>
    }


    @if (popup)
    {
        <div class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="ClosePopup">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Modal body text goes here.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>


@code {

    bool popup = false;

    void ShowPopup()
    {
        popup = true;
    }

    void ClosePopup()
    {
        popup = false;
    }

}

